@{ 
    var textfilu = Server.MapPath("App_Data/Oppilaat.txt");
    Array oppilaat = File.ReadAllLines(textfilu);
}

<!DOCTYPE html>
<html>
    <head>
        <title></title>
    </head>
    <body>
        <h2>Tänään on @DateTime.Today.ToShortDateString()</h2>
        <h2>Oppilaamme</h2>
        <div>
            <p>
                @{ 
                    int i = 1;
                    foreach (string oppilas in oppilaat) {
                        @i @oppilas <br />
                        i++;
                    }
                }
            </p>
        </div>
    </body>
</html>
